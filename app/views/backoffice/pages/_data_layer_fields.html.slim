- if @page.page_type == 2
  .nested-fields
    .row.file.-input
      .grid-sm-9
        = f.input :shapefile, as: :file, accept: ".csv", input_html: {id:"map_file"}
      .grid-sm-2.year
        label 
          abbr title="required" *
        = f.input_field :year, placeholder: "Year", required: true
      .grid-sm-1
        = link_to_remove_association '×', f, class: 'btn -delete'
- else
  .nested-fields
    .row.file.-input.input-wrapper
      .grid-sm-11
        = f.input :shapefile, as: :file, input_html: {id:"map_file"}
      .grid-sm-1
        = link_to_remove_association '×', f, class: 'btn -delete'
